{
  "manifest_version": 3,
  "name": "Wplace_Map_Inspector",
  "version": "1.0",
  "description": "Select a region on the Wplace map and export who painted there | 在 Wplace 地图上选定区域并导出绘制者信息",
  "icons": {
    "48": "icon48.png"
  },
  "action": {
    "default_title": "Wplace_Map_Inspector",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "alarms"
  ],
  "host_permissions": [
    "https://*.wplace.live/*",
    "https://backend.wplace.live/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.wplace.live/*",
        "<all_urls>"
      ],
      "js": [
        "main.js",
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
