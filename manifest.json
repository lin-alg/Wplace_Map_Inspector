{
  "manifest_version": 3,
  "name": "Wplace_Map_Inspector",
  "version": "1.0",
  "description": "A lightweight tool to select a region on the Wplace map and export who has painted there. | 一个用于在 Wplace 地图上选定区域，自动分析并导出“谁在这里画过”的轻量工具。",
  "icons": {
    "48": "icon48.png"
  },
  "action": {
    "default_title": "Wplace_Map_Inspector",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
  "https://*.wplace.live/*",
  "http://*.wplace.live/*"
    ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "run_at": "document_idle"
    }
  ]
}

